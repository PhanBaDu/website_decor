<%@page contentType="text/html" pageEncoding="UTF-8"%>
<div class="mt-24">
    <!-- Main Hero Image -->
    <div class="relative overflow-hidden bg-background mb-8">
        <div class="relative h-96 md:h-[300px]">
            <img
                src="./assets/images/hero.png"
                alt="Background trang trí"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-opacity-30"></div>
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center text-white">
                    <h2 class="text-3xl md:text-5xl font-bold mb-4">Bộ Trang Trí Phòng Khách</h2>
                    <p class="text-lg md:text-xl mb-6 max-w-2xl">
                        Tạo điểm nhấn cho phòng khách với bộ trang trí hiện đại và sang trọng
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 px-6">
        <!-- Image 1 -->
        <div
            class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
            <img
                src="./assets/images/decor2.png"
                alt="Đèn trang trí phòng ngủ"
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent"
            ></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-sm">Đèn Trang Trí Phòng Ngủ</h3>
                <p class="text-xs text-gray-200 mt-1">Tạo không gian ấm cúng</p>
            </div>
        </div>

        <!-- Image 2 -->
        <div
            class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
            <img
                src="./assets/images/decor3.png"
                alt="Tranh trang trí tường"
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent"
            ></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-sm">Tranh Trang Trí Tường</h3>
                <p class="text-xs text-gray-200 mt-1">Làm mới không gian</p>
            </div>
        </div>

        <!-- Image 3 -->
        <div
            class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
            <img
                src="./assets/images/gioithieu1.jpg"
                alt="Thiết kế độc đáo"
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent"
            ></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-sm">Thiết Kế Độc Đáo</h3>
                <p class="text-xs text-gray-200 mt-1">Xu hướng hiện đại</p>
            </div>
        </div>

        <!-- Image 4 -->
        <div
            class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
            <img
                src="./assets/images/gioithieu2.jpg"
                alt="Phong cách tối giản"
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent"
            ></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                <h3 class="font-semibold text-sm">Phong Cách Tối Giản</h3>
                <p class="text-xs text-gray-200 mt-1">Thanh lịch và hiện đại</p>
            </div>
        </div>
    </div>
</div>
